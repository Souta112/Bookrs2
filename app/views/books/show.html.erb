<p class="notice">
<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %></p>
<div class ="container px-5 px-sm-0">
<div class ="row">
<%= render 'layouts/list', user: @user, username: @username, book: @newbook %>
<div class ="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class = "table">
 <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    <td>
    <%= link_to user_path(@user.id)do %>
    <%= attachment_image_tag @book.user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg" %><br>
    <%= @user.name %>
    <% end %>
    </td>
    <td><%= link_to book_path(@book.id) do%>
    <%= @book.title %>
    <% end %>
    </td>
     <td>
    <%= @book.body %>
    </td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %> </td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
    <% end %>
    </tr>
  </thead>
  </tbody>
</table>
</div>
</div>
</div>


