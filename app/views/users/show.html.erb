<p class="notice"><%= notice %></p>
<div class ="container px-5 px-sm-0">
<div class ="row">
<%= render 'layouts/list', user: @user, username: @username, book: @book %>
<div class ="col-md-8 offset-md-1">
  <h1>Books</h1>
<table class = "table">
 <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @books.each do |book| %>
    <td><%= link_to attachment_image_tag book.user, :profile_image,:fill, 40, 40, fallback: "no_image.jpg" %></td>
    <td><%= link_to book.title  ,book_path(book.id) %></td>
    <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
